<div id="header">
  <div id="header_content">
    <div id="title">
      <p><a href="/question">Quora</a></p>
      <div id="header_nav">
        <p><a href="/">My Profile</a></p>
      </div>
    </div>
    <div id="form">
      <form action="/logout" method="post">
        <input type="submit" value="LOG OUT">
      </form>
    </div>
  </div>
</div>




<div id="content">

  <div id="profile">
    <p>Hello <%= current_user.first_name%></p>
  </div>

  <div class="row">
    <div class="col-md-3" id="feeds">
      <p>Feeds</p>
    </div>

    <div class="col-md-8 col-md-offset-1" id="answer">
      <p>Content</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3" id='nav_menue'>
      <ul>
        <li>
          <button>Add question</button>
        </li>
        <li>
          <form action="/user/<%= current_user.id%>/question" method="get">
            <input type="submit" value="My Questions">
          </form>
        </li>
        <li>
          <form action="/question" method="get">
            <input type="submit" value="All Questions">
          </form>
        </li>
      </ul>
    </div>

    <div class="col-md-8 col-md-offset-1">
      <div id="question_form" >
        <form action="/question" method="post">
          <input id="title" type="text" name="question[title]" placeholder="Title">
          <input id="content" type="text" name="question[content]" placeholder="content">
          <input type="hidden" name="question[user_id]" value="<%= current_user.id%>">
          <input id="submit" type="submit" value="Add question">
        </form>
      </div>
      <div id="all_user_questions">
        <% if @all_user_questions %>
          <% @all_user_questions.each do |question| %>
            <div id="question">
              <div id='title'>
                <%= "<p>#{question.title} </p>" %>
              </div>

              <form action="/user/<%= current_user.id %>/question/<%= question.id %>" method="get" id='open'>
                <input type="submit" value="Open Question">
              </form>

            </div>
          <% end %>
        <% end %>
      </div>
      <div id="question">
        <% if @question %>
          <%= "<p>Title: #{@question.title} </p>" %>
          <%= "<p>Content: #{@question.content}</p>" %>
          <% if @question.user_id != current_user.id %>
            <form id='upvote' action="/question_upvote" method="post">
              <input type="hidden" name="upvote[user_id]" value="<%= current_user.id %>">
              <input type="hidden" name="upvote[question_id]" value="<%= @question.id %>">
              <input type="hidden" name="upvote[action]" value="upvote">
              <input type="submit" value="Upvote">
            </form>
            <form id='downvote' action="/question_downvote" method="post">
              <input type="hidden" name="downvote[user_id]" value="<%= current_user.id %>">
              <input type="hidden" name="downvote[question_id]" value="<%= @question.id %>">
              <input type="hidden" name="downvote[action]" value="downvote">
              <input type="submit" value="Downvote">
            </form>
          <% end %>
          <% if @answers %>
            <% @answers.each do |answer| %>
              <%= "<p>Answer: #{answer.content} |||| VOTES:#{answer.votes_count}</p>" %>
              <% if answer.user_id != current_user.id %>
                <form id='upvote' action="/answer_upvote" method="post">
                  <input type="hidden" name="upvote[user_id]" value="<%= current_user.id %>">
                  <input type="hidden" name="upvote[answer_id]" value="<%= answer.id %>">
                  <input type="hidden" name="upvote[action]" value="upvote">
                  <input type="submit" value="Upvote">
                </form>
                <form id='downvote' action="/answer_downvote" method="post">
                  <input type="hidden" name="downvote[user_id]" value="<%= current_user.id %>">
                  <input type="hidden" name="downvote[answer_id]" value="<%= answer.id %>">
                  <input type="hidden" name="downvote[action]" value="downvote">
                  <input type="submit" value="Downvote">
                </form>
              <% end %>
            <% end %>
          <% end %>
          <button>Add answer</button>
          <form action="/answer" method="post">
            <input type="text" name="answer[content]">
            <input type="hidden" name="answer[user_id]" value="<%= current_user.id %>">
            <input type="hidden" name="answer[question_id]" value="<%= @question.id %>">
            <input type="submit" value="Add answer">
          </form>
        <% end %>
      </div>
    </div>
  </div>

</div>
